<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">Perfil</h1>
      {{#if user}}
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Bienvenido, {{user.first_name}}, {{user.last_name}}!</h5>
          <p class="card-text">Email: {{user.email}}</p>
          <p class="card-text">Edad: {{user.age}}</p>
          <p class="card-text">Rol: {{user.role}}</p>
        </div>
      </div>
      <form action="logout" method="get" class="mt-3">
        <button type="submit" class="btn btn-primary">Cerrar sesión</button>
      </form>
      {{else}}
      <p class="alert alert-warning">No has iniciado sesión.</p>
      {{/if}}
    </div>
  </div>
</div>

<br />

<footer class="footer mt-auto py-3 bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-auto">
        <a href="/" class="text-dark text-decoration-none">Home</a>
      </div>
      <div class="col-auto">
        <a href="/profile/" class="text-dark text-decoration-none">Profile</a>
      </div>
      <div class="col-auto">
        <a href="/api/session/logout" class="text-dark text-decoration-none">Logout</a>
      </div>
    </div>
  </div>
</footer>