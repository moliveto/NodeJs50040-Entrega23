<div class="row justify-content-center">
  <div class="col-md-6">
    <h1 class="text-center mb-4">Perfil</h1>
    {{#if user}}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Bienvenido, {{user.first_name}}, {{user.last_name}}!</h5>
        <p class="card-text">Email: {{user.email}}</p>
        <p class="card-text">Edad: {{user.age}}</p>
        <p class="card-text">Rol: {{user.role}}</p>
      </div>
    </div>
    <div class="d-flex justify-content-between mt-3">
      <form action="/logout" method="get">
        <button type="submit" class="btn btn-primary">Cerrar sesión</button>
      </form>
      <a href="/" class="btn btn-secondary">Ir a inicio</a>
    </div>
    {{else}}
    <p class="alert alert-warning">No has iniciado sesión.</p>
    {{/if}}
  </div>
</div>
</div>