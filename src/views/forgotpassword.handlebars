<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Olvide mi Contraseña</h1>
            <form action="/api/users/resetpassword" method="post" class="p-4 border rounded-3 bg-light">
                <div class="mb-3">
                    <label for="email" class="form-label">Correo</label>
                    <input type="email" name="email" id="email" class="form-control"
                        placeholder="introduzca su correo electronico" required>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Resetear Contraseña</button>
                </div>
            </form>
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="col">
                    <h5><a href="/" class="text-decoration-none">Home</a></h5>
                </div>
            </div>
        </div>
    </div>
</div>